{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "isolatedModules": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "types": [
      "hammerjs"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}